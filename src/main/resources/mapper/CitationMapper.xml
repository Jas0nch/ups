<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csc540.ups.dao.CitationDao">
  <insert id="insert" parameterType="com.csc540.ups.entity.Citation">
    insert into upsdb.citation (id, carNum, model,
                                color, `date`, lotID,
                                `time`, `type`, `status`)
    values (#{id,jdbcType=VARCHAR}, #{carNum,jdbcType=VARCHAR}, #{model,jdbcType=VARCHAR},
            #{color,jdbcType=VARCHAR}, #{date,jdbcType=TIMESTAMP}, #{lotID,jdbcType=VARCHAR},
            #{time,jdbcType=TIMESTAMP}, #{type,javaType=com.csc540.ups.enums.CitationType},
            #{status,javaType=com.csc540.ups.enums.CitationStatus})
  </insert>
  <insert id="insertSelective" parameterType="com.csc540.ups.entity.Citation">
    insert into upsdb.citation
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="carNum != null">
        carNum,
      </if>
      <if test="model != null">
        model,
      </if>
      <if test="color != null">
        color,
      </if>
      <if test="date != null">
        `date`,
      </if>
      <if test="lotID != null">
        lotID,
      </if>
      <if test="time != null">
        `time`,
      </if>
      <if test="type != null">
        `type`,
      </if>
      <if test="status != null">
        `status`,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=VARCHAR},
      </if>
      <if test="carNum != null">
        #{carNum,jdbcType=VARCHAR},
      </if>
      <if test="model != null">
        #{model,jdbcType=VARCHAR},
      </if>
      <if test="color != null">
        #{color,jdbcType=VARCHAR},
      </if>
      <if test="date != null">
        #{date,jdbcType=TIMESTAMP},
      </if>
      <if test="lotID != null">
        #{lotID,jdbcType=VARCHAR},
      </if>
      <if test="time != null">
        #{time,jdbcType=TIMESTAMP},
      </if>
      <if test="type != null">
        #{type,javaType=com.csc540.ups.enums.CitationType},
      </if>
      <if test="status != null">
        #{status,javaType=com.csc540.ups.enums.CitationStatus},
      </if>
    </trim>
  </insert>
  <resultMap id="BaseResultMap" type="com.csc540.ups.entity.Citation">
    <result column="id" jdbcType="VARCHAR" property="id"/>
    <result column="carNum" jdbcType="VARCHAR" property="carNum"/>
    <result column="model" jdbcType="VARCHAR" property="model"/>
    <result column="color" jdbcType="VARCHAR" property="color"/>
    <result column="date" jdbcType="TIMESTAMP" property="date"/>
    <result column="lotID" jdbcType="VARCHAR" property="lotID"/>
    <result column="time" jdbcType="TIMESTAMP" property="time"/>
    <result column="type" javaType="com.csc540.ups.enums.CitationType" property="type"/>
    <result column="status" javaType="com.csc540.ups.enums.CitationStatus" property="status"/>
  </resultMap>
  <select id="selectByCarNum" resultType="com.csc540.ups.entity.Citation">
    select *
    from upsdb.citation
    where carNum = #{carNum}
      and status = #{status}
  </select>
  <update id="updateStatusByID">
    update upsdb.citation
    set status=#{status}
    where id = #{id}
  </update>
</mapper>